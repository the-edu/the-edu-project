{
  "endOfLine": "auto",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "singleAttributePerLine": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "trailingComma": "es5",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-classnames",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react",
    "^next",

    "^~/features/(.*)$",
    "^~/hooks/(.*)$",
    "^~/provider/(.*)$",
    "^~/components/(.*)$",
    "^~/utils/(.*)$",

    "<THIRD_PARTY_MODULES>",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
